<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="640dp"
    android:background="#232323"
    android:orientation="vertical">

    <View
        android:id="@+id/kido_tab"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="#D9D9D9"
        />

    <TextView
        android:id="@+id/kiosk"
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/noto_bold"
        android:gravity="center_horizontal|top"
        android:layout_centerHorizontal="true"
        android:text="모의키오스크"
        android:textAppearance="@style/kiosk"
        android:textSize="17sp" />

    <ImageButton
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/go_back"/>

    <View
        android:id="@+id/kiosk_tab"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:background="#FF2F21"
    />
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/homeIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:background="#ff2f21"
        android:src="@drawable/home_icon"
        />

    <TextView
        android:id="@+id/kido_coffee"
        android:layout_width="132dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/kido_tab"
        android:layout_marginTop="10dp"
        android:layout_marginStart="114dp"
        android:text="KiDo Coffee"
        android:textStyle="bold"
        android:lineSpacingExtra="2sp"
        android:translationY="-1.22sp"
        android:gravity="center_horizontal|top"
        android:textSize = "24sp"
        android:letterSpacing = "-0.03"
        android:textColor = "#FFFFFF"
    />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/menu_tab"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_below="@+id/kiosk_tab"
        android:layout_marginTop="0dp"
        app:tabMode="scrollable">
    </com.google.android.material.tabs.TabLayout>

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="360dp"
        android:layout_height="488dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="152dp"
        android:background="#D9D9D9"
        />

    <View
        android:id="@+id/menu_basket"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="490dp"
        android:layout_marginBottom="0dp"
        android:background="#FFFFFF" />

    <View
        android:id="@+id/pay_box"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="229dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="490dp"
        android:background="#52FF2F01"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/allDelBtn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="295dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="495dp"
        android:background="@drawable/alldel_btn"
        android:text="전체\n취소"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/leftTime"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="233dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="491dp"
        android:text="남은시간"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAppearance="@style/leftTime"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/countDownTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300"
        android:textColor="#FF1F1F"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="514dp"
        android:layout_marginStart="233dp"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="14dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="277dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="523dp"
        android:text="초"
        android:textStyle="bold"
        android:lineSpacingExtra="2sp"
        android:translationY="-0.76sp"
        android:textSize="15sp"
        android:gravity="top"
        android:textColor="#222222"
        />

    <TextView
        android:id="@+id/won"
        android:layout_width="14dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="341dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="546dp"
        android:text="원"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#222222"
        android:lineSpacingExtra="2sp"
        android:translationY="-0.76sp"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/howMuch"
        android:layout_width="12dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="329dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="541dp"
        android:text="0"
        android:textSize="20sp"
        android:textColor="#ff2f21"
        android:textStyle="bold"
        android:lineSpacingExtra="2sp"
        android:translationY="-1.02sp"
        android:gravity="top"
        />

    <LinearLayout
        android:id="@+id/payBtn"
        android:layout_width="115dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="235dp"
        android:layout_marginTop="567dp"
        android:background="@drawable/pay_btn"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/lyj_payImgBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:background="#00000000"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/payment"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제\n하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:letterSpacing="-0.01"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>